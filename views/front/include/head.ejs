<script type="text/javascript">
    function openRegist(url){
        var index = layer.open({
            type:2,
            content: url,
            maxmin: true
        });
        layer.full(index);
    }

    //退出登录
    function logOut(){
        $.post("/regist/logout",{},function(data){
            if(!data.err){
                layer.msg('登出成功！');
                setTimeout(function(){
                    window.location.reload();
                },500)
            }else{
                layer.alert('用户未登录', {
                    icon: 2,
                    skin: 'layer-ext-moon'
                })
            }
        })
    }

</script>
